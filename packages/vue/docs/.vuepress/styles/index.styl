.dumi-previewer .dumi-previewer-source,
.dumi-previewer .dumi-previewer-demo {
  overflow: auto;
}

@media (max-width: 719px) {
  .sidebar-button + .home-link {
    margin-left: 20px;
  }
}

@media (max-width: 419px) {
  .theme-dumi-content div[class*="language-"] {
    margin: 0;
    border-radius: 0;
  }
}

