{
  "preset": "ts-jest",
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "allowJs": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "../lib",
    "baseUrl": ".",
    "paths": {
      "rxjs/*": ["./node_modules/rxjs/*"]
    }
  }
}
